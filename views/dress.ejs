<div id="wrapper">
  <div class="container" >
      <h1 id="webtitle">Bridal Fitter</h1>
      <h3 id="rec-size">Model Size</h3>
  </div>

    <div id="left-module" class="container w-25 float-left" style="border-right: 1px solid #ddd; height: 74.8vh">
      <form action='/dress' method="post" enctype="multipart/form-data" class="upload">
        <h3>Upload your picture</h3>
	   <!-- <input type="file" id="chosenFile" name="chosenFile" accept="image/*" onchange="setModel()" />-->

		   <input class="my-3" type="file" id="fileInput" name="file">
	<!--<button id="submit">Submit</button>-->
      </form> <!--upload-->
      <h3 class="mt-4">Measurements</h3>
	  <table id="measurements">
	    <tr>
  		  <th><h4>Chest</h4></th>
  		  <th><select id="chest_meas">
    	    <option value="c1">32</option>
    	    <option value="c2">33.5</option>
    	    <option value="c3">35</option>
    	    <option value="c4">36.5</option>
    	    <option value="c5">38</option>
    	    <option value="c6">39.5</option>
  		  </select></th>
	    </tr>

	    <tr>
  		  <th><h4>Waist</h4></th>
  		  <th><select id="waist_meas">
    	    <option value="w1">24</option>
    	    <option value="w2">25.5</option>
    	    <option value="w3">27</option>
    	    <option value="w4">28.5</option>
    	    <option value="w5">30</option>
    	    <option value="w6">31.5</option>
  		  </select></th>
	    </tr>

	    <tr>
  	      <th><h4>Hips</h4></th>
  		  <th><select id="hips_meas">
    	    <option value="h1">33</option>
    	    <option value="h2">35</option>
    	    <option value="h3">36.5</option>
    	    <option value="h4">38</option>
    	    <option value="h5">39.5</option>
    	    <option value="h6">41</option>
  		  </select></th>
	    </tr>
	  </table>
  	
  	  <button type="button" class="btn btn-primary mt-5 mb-4" style="border-radius: 30px; font-size: 1.2em;" onclick="model()">Get Recommended Size</button><br><br>
      <a href="basket?n=<%=name%>&p_id=<%=p_id%>" class="btn btn-primary" style="border-radius: 30px; font-size: 1.2em">
        Add To Cart
      </a>
    </div> <!--left-module-->

      
	<div>
		<canvas id="canvasOutput" style="height:400px;"></canvas>
				
				 
		<img id="dress-img" class="" src="<%= src %>" style="display:none; height:400px;"/>
	
		<img id="model-img" class="" src="" style="position:relative;display:none; height:400px"/>
	</div>
